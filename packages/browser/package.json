{
  "name": "errand-list-browser",
  "version": "0.1.0",
  "description": "Errand List - Browser",
  "license": "MIT",
  "type": "module",
  "main": "src/index.tsx",
  "author": {
    "name": "Aleksander Fret",
    "email": "olekfret80@gmail.com",
    "url": "https://github.com/aleksanderfret/"
  },
  "homepage": "https://github.com/aleksanderfret/errand-list#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/aleksanderfret/errand-list"
  },
  "bugs": {
    "url": "https://github.com/aleksanderfret/errand-list/issues"
  },
  "scripts": {
    "build": "webpack --progress --config ./webpack.config.prod.ts",
    "check": "npm-run-all lint format stylelint compile",
    "compile": "tsc -p tsconfig.prod.json",
    "dev": "webpack-dev-server --open --config ./webpack.config.dev.ts",
    "format": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "format:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint . --ext \".js,.jsx,.ts,.tsx\"",
    "lint:fix": "eslint ./ --ext \".js,.jsx,.ts,.tsx\" --max-warnings=0 --fix",
    "pre-commit": "lint-staged && npm run test",
    "pre-push": "npm-run-all check test",
    "stylelint": "stylelint src/**/*.scss --cache",
    "stylelint:fix": "stylelint src/**/*.scss --cache --fix",
    "test": "echo 'No tests Found!'"
  },
  "dependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "ts-polyfill": "3.8.2"
  },
  "devDependencies": {
    "@types/autoprefixer": "9.7.2",
    "@types/mini-css-extract-plugin": "0.9.1",
    "@types/node": "14.11.2",
    "@types/optimize-css-assets-webpack-plugin": "5.0.1",
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.8",
    "@types/terser-webpack-plugin": "4.2.0",
    "@types/webpack-dev-server": "3.11.0",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "autoprefixer": "10.0.1",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "4.3.0",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.2",
    "eslint-plugin-react-hooks": "4.1.2",
    "fork-ts-checker-webpack-plugin": "5.2.0",
    "html-webpack-plugin": "4.5.0",
    "lint-staged": "10.4.0",
    "mini-css-extract-plugin": "0.11.2",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "5.0.4",
    "path": "0.12.7",
    "postcss": "8.1.1",
    "postcss-loader": "4.0.2",
    "prettier": "2.1.2",
    "sass": "1.26.11",
    "sass-loader": "10.0.2",
    "style-loader": "1.2.1",
    "stylelint": "13.7.2",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.18.0",
    "terser-webpack-plugin": "4.2.2",
    "ts-loader": "8.0.4",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.0.3",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 9",
    "not op_mini all"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,scss,css,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint -c .eslintrc --fix",
      "echo test"
    ],
    "**/*.scss": [
      "stylelint --syntax scss"
    ]
  }
}
